        <version>1.2.1-SNAPSHOT</version>
    </parent>
    <artifactId>maltcms-osgi-distribution</artifactId>
    <name>maltcms-osgi-distribution</name>
    <url>http://maltcms.sourceforge.net</url>
    <packaging>nbm</packaging>
    
    <build>
        <plugins>      
            <!-- Assembly plugin -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>my-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/osgi.xml</descriptor>
                    </descriptors>
                    <finalName>${distributionName}</finalName>
                    <updateOnly>true</updateOnly>
                    <attach>false</attach>
                </configuration>
            </plugin>
			<plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <version>3.8.1</version>
                <extensions>true</extensions>
				<configuration>
					<useOSGiDependencies>false</useOSGiDependencies>
					<author>Nils Hoffmann</author>
					<cluster>maltcms</cluster>
					<publicPackages>
						<publicPackage>*</publicPackage>
                    </publicPackages>
				</configuration>
            </plugin>
            <plugin> <!-- required since nbm-plugin 3.0-->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <useDefaultManifestFile>true</useDefaultManifestFile>
                </configuration>
            </plugin>
        </plugins>
    </build>
    

