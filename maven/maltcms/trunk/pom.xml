<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.sf.maltcms</groupId>
    <artifactId>maltcms-modules</artifactId>
    <packaging>pom</packaging>
    <version>1.0.6-SNAPSHOT</version>
    <name>Maltcms-Modules</name>
    <url>http://maltcms.sourceforge.net</url>
    <ciManagement>
        <system>hudson</system>
        <url>http://127.0.0.1:8080/hudson/job/maltcms-modules/</url>
    </ciManagement>
    <scm>
        <connection>scm:svn:https://maltcms.svn.sourceforge.net/svnroot/maltcms/maven/maltcms/trunk/</connection>
        <developerConnection>scm:svn:https://maltcms.svn.sourceforge.net/svnroot/maltcms/maven/maltcms/trunk/</developerConnection>
        <url>https://maltcms.svn.sourceforge.net/svnroot/maltcms/maven/maltcms/</url>
    </scm>
    <distributionManagement>
        <repository>
            <id>maltcms-artifactory</id>
            <name>maltcms-artifactory-releases</name>
            <url>http://www.maltcms.de:8081/artifactory/libs-releases-local</url>
        </repository>

        <snapshotRepository>
            <id>maltcms-artifactory</id>
            <name>maltcms-artifactory-snapshots</name>
            <url>http://www.maltcms.de:8081/artifactory/libs-snapshots-local</url>
        </snapshotRepository>
    </distributionManagement>

    <build>
        <pluginManagement>
    <!-- To use the plugin goals in your POM or parent POM -->
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-release-plugin</artifactId>
                    <version>2.0</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-scm-plugin</artifactId>
                    <version>1.0</version>
                    <configuration>
                        <connectionType>developerConnection</connectionType>
                    </configuration>
                </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <!-- Default configuration for all reports -->
        	<show>public</show> 
        </configuration>
        <executions>
          <execution>
            <id>aggregate</id>
            <goals>
              <goal>aggregate</goal>
            </goals>
            <phase>jar</phase>
            <configuration>
           	<show>public</show> 
		</configuration>
          </execution>
        </executions>
      </plugin>
		</plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.6</source>
                    <target>1.6</target>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>maltcms-apps</module>
        <module>maltcms-chroma</module>
        <module>maltcms-chroma4D</module>
        <module>maltcms-chroma4D-srg</module>
        <module>maltcms-filters</module>
        <module>maltcms-commands</module>
        <module>maltcms-datastructures</module>
        <module>maltcms-datastructures-api</module>
        <module>maltcms-execution</module>
        <module>maltcms-io</module>
        <module>maltcms-ui</module>
        <module>maltcms-db</module>
        <module>maltcms-experimental</module>
        <module>maltcms-statistics</module>
        <module>maltcms-sralign</module>
        <module>maltcms-xml-alignment</module>
        <module>maltcms-xml-annotation</module>
        <module>maltcms</module>
        <module>maltcms-resources</module>
        <module>maltcms-io-netcdf</module>
        <module>maltcms-io-mzxml</module>
        <module>maltcms-io-mzdata</module>
        <module>maltcms-io-mzml</module>
        <module>maltcms-io-openms-featurexml</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>net.sf.maltcms</groupId>
            <artifactId>cross-main</artifactId>
            <version>1.1.3-SNAPSHOT</version>
    <!--<type>pom</type>-->
        </dependency>
        <dependency>
            <groupId>net.sf.maltcms</groupId>
            <artifactId>cross-ui</artifactId>
            <version>1.1.3-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>javax.media</groupId>
            <artifactId>jai_core</artifactId>
            <version>1.1.3</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>javax.media</groupId>
            <artifactId>jai_codec</artifactId>
            <version>1.1.3</version>
            <type>jar</type>
        </dependency>
    </dependencies>
    <reporting>
        <plugins>
        <!--    <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
                <configuration>
                    <configLocation>config/sun_checks.xml</configLocation>
                </configuration>
            </plugin>-->
	<!--<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <show>public</show>
        </configuration>
      </plugin>-->
        </plugins>
    </reporting>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>
