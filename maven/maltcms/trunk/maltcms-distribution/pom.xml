    <artifactId>maltcms-distribution</artifactId>
    <name>maltcms-distribution</name>
    <url>http://maltcms.sourceforge.net</url>
    <packaging>pom</packaging>
    
    <build>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-source</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/assemble</source>
                            </sources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Jar plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <id>create-cp-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <skipIfEmpty>false</skipIfEmpty>
                            <archive>
                                <index>true</index>
                                <manifest>
                                    <useUniqueVersions>false</useUniqueVersions>
                                    <mainClass>net.sf.maltcms.apps.Maltcms</mainClass>
                                    <addClasspath>true</addClasspath>
                                    <classpathPrefix>lib</classpathPrefix>
                                    <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                                    <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                                </manifest>
                            </archive>
                            <finalName>maltcms.jar</finalName>
                            <outputDirectory>${project.build.directory}/</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <!-- Assembly plugin -->
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>my-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <descriptors>
                        <descriptor>src/main/assembly/install.xml</descriptor>
                    </descriptors>
                    <!--<updateOnly>true</updateOnly>-->
                    <attach>false</attach>
                </configuration>
            </plugin>
            <!-- Antrun plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>set-file-perms</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <echo message="Correcting file permissions in ${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}" />
                                <!--                                <unzip src="${project.build.directory}/${project.artifactId}-${project.version}/lib/maltcms-resources-${project.version}.jar" dest="${project.build.directory}/${project.artifactId}-${project.version}/" />-->
                                <!--<chmod includes="*.sh,*.bat" dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/scripts/" perm="ugo+rx" />-->
                                <copy file="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/bin/maltcms.sh" toFile="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/bin/maltcms.command"/>
                                <chmod includes="*.sh,*.command,*.bat,*.jar" dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/" perm="ugo+rx" />
                                <chmod includes="*.sh,*.command,*.bat,*.jar" dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/bin" perm="ugo+rx" />
                                <copy file="${project.build.directory}/maltcms.jar" toDir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/"/>
                                <zip destfile="${project.build.directory}/${project.artifactId}-${project.version}-bin.zip">
                                    <zipfileset dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/bin/" prefix="${project.artifactId}-${project.version}/bin" filemode="755">
                                        <include name="*.sh"/>
                                        <include name="*.command"/>
                                        <!--<include name="scripts/*.sh"/>-->
                                    </zipfileset>    
                                    <zipfileset dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/" prefix="${project.artifactId}-${project.version}">
                                        <include name="**"/>
                                        <exclude name="bin/*.sh"/>
                                        <exclude name="bin/*.command"/>
                                        <!--<exclude name="scripts/*.sh"/>-->
                                    </zipfileset>    
                                    
                                </zip>
                                <!--                                <tar destfile="${project.build.directory}/${project.artifactId}-${project.version}-bin.tar.gz" 
                                     basedir="${project.build.directory}/${project.artifactId}-${project.version}-bin/"
                                     includes="**"
                                     compression="gzip">
                                    <tarfileset dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/" filemode="755">
                                        <include name="*.sh"/>
                                        <include name="scripts/*.sh"/>
                                    </tarfileset>
                                    <tarfileset dir="${project.build.directory}/${project.artifactId}-${project.version}-bin/${project.artifactId}-${project.version}/">
                                        <include name="**"/>
                                        <exclude name="*.sh"/>
                                        <exclude name="scripts/*.sh"/>
                                    </tarfileset>
                                </tar>-->
                                <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}-bin.zip" type="zip"/>
                                <!--                                <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}-bin.tar.gz" type="tar.gz"/>-->
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <!-- disable reports -->
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <configuration>
                    <generateReports>false</generateReports>
                </configuration>
            </plugin>

        </plugins>
    </build>
    

