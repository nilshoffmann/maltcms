<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <description>
        This file defines elements of the myFragmentCommand pipeline.
    </description>
    
    <!-- a command pipeline consists of a list of 
    commands to be executed -->
    <bean id="commandPipeline" class="cross.datastructures.pipeline.CommandPipeline">
        <property name="checkCommandDependencies" value="true"/>
        <property name="commands">
            <list>
                <ref bean="myFragmentCommand"/>
            </list>
        </property>    
    </bean>
    
    <!-- filter beans used by myFragmentCommand -->
    <bean id="savitzkyGolayFilter" class="maltcms.commands.filters.array.SavitzkyGolayFilter" >
        <property name="window" value="12"/>
    </bean>
    
    <bean id="sqrtFilter" class="maltcms.commands.filters.array.SqrtFilter">
    </bean>
    
    <!-- commands -->
    <bean id="myFragmentCommand" class="net.sf.maltcms.tutorials.MyFragmentCommand">
        <property name="filter">
            <list>
                <ref bean="savitzkyGolayFilter"/>
                <ref bean="sqrtFilter"/>
            </list>
        </property>
    </bean>
    
</beans>
