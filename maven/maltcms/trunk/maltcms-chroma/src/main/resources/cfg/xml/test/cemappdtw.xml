<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <description>
            This file defines elements of the default ChromA pipeline.
    </description>
    <!-- a command pipeline consists a list of 
     commands to be executed -->
    <bean id="commandPipelineFull" class="cross.datastructures.pipeline.CommandPipeline">
        <property name="checkCommandDependencies" value="true"/>
        <property name="commands">
            <list>
                <ref bean="defaultVarLoader" />
                <ref bean="denseArrayProducer" />
                <ref bean="pairwiseDistanceCalculatorFull" />
            </list>
        </property>    
    </bean>
    
    <bean id="commandPipelinePartitioned" class="cross.datastructures.pipeline.CommandPipeline">
        <property name="checkCommandDependencies" value="true"/>
        <property name="commands">
            <list>
                <ref bean="defaultVarLoader" />
                <ref bean="denseArrayProducer" />
                <ref bean="ticPeakFinder" />
                <ref bean="peakCliqueAlignment" />
                <ref bean="pairwiseDistanceCalculatorPartitioned" />
            </list>
        </property>    
    </bean>
               <!-- commands -->
               
    <!-- CSVAnchorReader, reads pre-defined alignment anchors -->
    <bean id="csvAnchorReader" class="maltcms.commands.fragments.io.CSVAnchorReader" scope="prototype">

    </bean>
    
    <!-- DefaultVarLoader, loads default variables -->
    <bean id="defaultVarLoader" class="maltcms.commands.fragments.preprocessing.DefaultVarLoader" scope="prototype">
        
    </bean>
    
    <!-- MassFilter, removes intensities associated to specified masses in raw data -->
    <bean id="massFilter" class="maltcms.commands.fragments.preprocessing.MassFilter" scope="prototype">
        <property name="epsilon" value="1.0"/>
        <property name="excludeMasses">
            <list>
            </list>
        </property>
    </bean>
    
    <!-- DenseArrayProducer, creates a dense profile matrix -->
    <bean id="denseArrayProducer" class="maltcms.commands.fragments.preprocessing.DenseArrayProducer" scope="prototype">
        <property name="maskedMasses">
            <list>
            <!-- <value>73</value> -->
            <!-- <value>74</value> --> 
            <!-- <value>75</value> --> 
            <!-- <value>147</value> --> 
            <!-- <value>148</value> --> 
            <!-- <value>149</value> --> 
            </list>
        </property> 
        <property name="invertMaskedMasses" value="false"/>  
        <property name="normalizeScans" value="true"/> 
        <property name="normalizeMeanVariance" value="false"/>
        <property name="massBinResolution" value="1.0d"/>
    </bean>
    
    
    <!-- filter beans used by ticPeakFinder -->
    <bean id="movingAverageFilter" class="maltcms.commands.filters.array.MovingAverageFilter" scope="prototype">
        <property name="window" value="10"/>
    </bean>
    <bean id="topHatFilter" class="maltcms.commands.filters.array.TopHatFilter" scope="prototype">
        <property name="window" value="50"/>
    </bean>
    <!-- TicPeakFinder -->
    <bean id="ticPeakFinder" class="maltcms.commands.fragments.peakfinding.TICPeakFinder" scope="prototype">
        <property name="peakThreshold" value="0.01"/>
        <property name="filter">
            <list>
                <ref bean="movingAverageFilter"/>
                <ref bean="topHatFilter"/>
            </list>
        </property>
        <property name="snrWindow" value="50"/>
        <property name="peakSeparationWindow" value="10"/>
        <property name="integratePeaks" value="false"/>
        <property name="integrateRawTic" value="true"/>
        <property name="saveGraphics" value="false"/>
    </bean>
    
    <bean id="gaussianDifferenceSimilarity" class="maltcms.math.functions.similarities.GaussianDifferenceSimilarity" scope="prototype">
        <property name="tolerance" value="5.0d"/>
        <property name="threshold" value="0.0d"/>
    </bean>
    
    <!-- array similarity functions -->
    <bean id="cosineSimilarity" class="maltcms.math.functions.similarities.ArrayCos" scope="prototype"/>
    <bean id="lpSimilarity" class="maltcms.math.functions.similarities.ArrayLp" scope="prototype"/>
    
    <!-- time penalized functions -->
    <bean id="timePenalizedDotProduct" class="maltcms.math.functions.ProductSimilarity" scope="prototype">
        <property name="scalarSimilarities">
            <array>
                <ref bean="gaussianDifferenceSimilarity"/>
            </array>
        </property>
        <property name="arraySimilarities">
            <array>
                <ref bean="cosineSimilarity"/>
            </array>
        </property>
    </bean>
    
    <!-- PeakCliqueAlignment -->
    <bean id="peakCliqueAlignment" class="maltcms.commands.fragments.alignment.PeakCliqueAlignment" scope="prototype">
        <property name="minCliqueSize" value="2"/>
        <property name="maxBBHErrors" value="0"/>
        <property name="similarityFunction" ref="timePenalizedDotProduct"/>
        <property name="savePeakSimilarities" value="false"/>
        <property name="exportAlignedFeatures" value="false"/>
        <property name="maxRTDifference" value="60.0d"/>
        <property name="useUserSuppliedAnchors" value="false"/>
        <property name="saveXMLAlignment" value="true"/>
        <property name="savePlots" value="false"/>
    </bean>
    
    <!-- PairwiseDistanceCalculator -->
    <bean id="pairwiseDistanceCalculatorFull" class="maltcms.commands.fragments.cluster.PairwiseDistanceCalculator">
        <property name="pairsWithFirstElement" value="false"/> 
        <property name="normalizeToDistances" value="true"/>
        <property name="workerFactory" ref="pairwiseDistanceWorkerFactoryFull"/>
    </bean>
    
    <bean id="pairwiseDistanceCalculatorPartitioned" class="maltcms.commands.fragments.cluster.PairwiseDistanceCalculator">
        <property name="pairsWithFirstElement" value="false"/> 
        <property name="normalizeToDistances" value="true"/>
        <property name="workerFactory" ref="pairwiseDistanceWorkerFactoryPartitioned"/>
    </bean>
     
    <bean id="cumulativeDistance" class="maltcms.commands.distances.DtwRecurrence" scope="prototype">
        <property name="globalGapPenalty" value="0"/>
    </bean>
    
    <!-- TICDynamicTimeWarp -->
    <bean id="pairwiseDistanceTic" class="maltcms.commands.distances.PairwiseDistance" scope="prototype">
        <property name="costFunction" ref="dtwCostFunction"/>
    </bean>
    
    <bean id="ticDynamicTimeWarp" class="maltcms.commands.distances.dtw.TICDynamicTimeWarp" scope="prototype">
        <property name="anchorRadius" value="0"/>
        <property name="useAnchors" value="true"/>
        <property name="minScansBetweenAnchors" value="10"/>
        <property name="globalBand" value="true"/>
        <property name="bandWidthPercentage" value="1.0"/>
        <property name="precalculatePairwiseDistances" value="true"/>
        <property name="extension" value=""/>
        <property name="saveLayoutImage" value="false"/>
        <property name="cumulativeDistance" ref="cumulativeDistance"/>
        <property name="pairwiseDistance" ref="pairwiseDistance"/> 
    </bean>
    
    <!-- MZIDynamicTimeWarp -->
    <bean id="mziDynamicTimeWarpPartitioned" class="maltcms.commands.distances.dtw.MZIDynamicTimeWarp" scope="prototype">
        <property name="anchorRadius" value="0"/>
        <property name="useAnchors" value="true"/>
        <property name="minScansBetweenAnchors" value="10"/>
        <property name="globalBand" value="true"/>
        <property name="bandWidthPercentage" value="1.0"/>
        <property name="precalculatePairwiseDistances" value="true"/>
        <property name="extension" value=""/>
        <property name="saveLayoutImage" value="false"/>
        <property name="cumulativeDistance" ref="cumulativeDistance"/>
        <property name="pairwiseDistance" ref="pairwiseDistancePartitioned"/>
    </bean>
    
    <bean id="pairwiseDistancePartitioned" class="maltcms.commands.distances.PairwiseFeatureSequenceSimilarity" scope="prototype">
        <property name="costFunction" ref="dtwSimilarity"/>
    </bean>
    
    <bean id="pairwiseDistanceWorkerPartitioned" class="maltcms.commands.fragments.cluster.pairwiseDistanceCalculator.PairwiseDistanceWorker" scope="prototype">
        <property name="similarity" ref="mziDynamicTimeWarpPartitioned"/>
    </bean>
    
    <bean id="pairwiseDistanceWorkerFactoryPartitioned" class="maltcms.commands.fragments.cluster.pairwiseDistanceCalculator.PairwiseDistanceWorkerFactory">
        <property name="beanId" value="pairwiseDistanceWorkerPartitioned"/>
    </bean>
    
    <bean id="mziDynamicTimeWarpFull" class="maltcms.commands.distances.dtw.MZIDynamicTimeWarp" scope="prototype">
        <property name="anchorRadius" value="0"/>
        <property name="useAnchors" value="true"/>
        <property name="minScansBetweenAnchors" value="10"/>
        <property name="globalBand" value="true"/>
        <property name="bandWidthPercentage" value="0.5"/>
        <property name="precalculatePairwiseDistances" value="true"/>
        <property name="extension" value=""/>
        <property name="saveLayoutImage" value="false"/>
        <property name="cumulativeDistance" ref="cumulativeDistance"/>
        <property name="pairwiseDistance" ref="pairwiseDistanceFull"/>
    </bean>
    
    <bean id="pairwiseDistanceFull" class="maltcms.commands.distances.PairwiseFeatureSequenceSimilarity" scope="prototype">
        <property name="costFunction" ref="dtwSimilarity"/>
    </bean>
    
    <bean id="pairwiseDistanceWorkerFull" class="maltcms.commands.fragments.cluster.pairwiseDistanceCalculator.PairwiseDistanceWorker" scope="prototype">
        <property name="similarity" ref="mziDynamicTimeWarpFull"/>
    </bean>
        
    <bean id="pairwiseDistanceWorkerFactoryFull" class="maltcms.commands.fragments.cluster.pairwiseDistanceCalculator.PairwiseDistanceWorkerFactory">
        <property name="beanId" value="pairwiseDistanceWorkerFull"/>
    </bean>
    
    <!-- DTW similarity function between feature vectors -->
    <bean id="dtwSimilarity" class="maltcms.math.functions.DtwTimePenalizedPairwiseSimilarity" scope="prototype">
        <property name="denseMassSpectraSimilarity" ref="timePenalizedDotProduct"/>
    </bean>
    
    <!--
    
    
     CenterStarAlignment 
-->    
    <bean id="centerStarAlignment" class="maltcms.commands.fragments.alignment.CenterStarAlignment">
        <property name="alignToFirst" value="false"/>
        <property name="centerSequence" value=""/>
    </bean><!--
    
     ChromatogramWarp 
    <bean id="chromatogramWarp" class="maltcms.commands.fragments.warp.ChromatogramWarp2"></bean>
    <bean id="ticHeatmapCoplotBeforeAlignment" class="maltcms.commands.fragments.visualization.TICHeatmapCoplot"></bean>
    <bean id="ticHeatmapCoplotAfterAlignment" class="maltcms.commands.fragments.visualization.TICHeatmapCoplot"></bean>
    <bean id="eicHeatmapCoplotBeforeAlignment" class="maltcms.commands.fragments.visualization.EICHeatmapCoplot"></bean>
    <bean id="eicHeatmapCoplotAfterAlignment" class="maltcms.commands.fragments.visualization.EICHeatmapCoplot"></bean>-->

    
</beans>
