<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

       <bean id="factory" class="cross.Factory">
           
       </bean>
       
       <bean id="inputDataFactory" class="cross.io.InputDataFactory">
           <property name="input" value="*.cdf"/>
           <property name="basedir" value="."/>
           <property name="recurse" value="false"/>
       </bean>
       
       <bean id="dataSourceFactory" class="cross.io.DataSourceFactory"/>
       
       <bean id="workflowFactory" class="cross.datastructures.workflow.WorkflowFactory">
       </bean>

</beans>
