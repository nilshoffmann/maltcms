    <custom>
        <reflowSkin>
            <theme>bootswatch-sandstone</theme>
            <highlightJs>true</highlightJs>
            <brand>
                <name>Maltcms</name>
                <href>https://github.com/nilshoffmann/maltcms</href>
            </brand>
            <slogan><![CDATA[The Modular Application Toolkit for Chromatography-Mass Spectrometry]]></slogan>
            <titleTemplate>%2$s | %1$s</titleTemplate>
            <toc>top</toc>
            <banner>false</banner>
            <topNav>Maltcms</topNav>
            <bottomNav>
                <column>Maltcms</column>
                <column>apidocs|reports|modules</column>
            </bottomNav>
            <bottomDescription>
                Maltcms is the Modular Application Toolkit for Chromatography-Mass Spectrometry.
            </bottomDescription>
            <pages>
                <index  type="page" project="maltcms-modules">
                    <shortTitle>Welcome</shortTitle>
                    <breadcrumbs>true</breadcrumbs>
                    <markPageHeader>false</markPageHeader>
                    <toc>false</toc>
                    <sections>
                        <carousel />
                        <thumbs>1</thumbs>
                        <body />
                        <columns>1</columns>
                        <sidebar />
                    </sections>
                </index>
                <developer-info>
                    <!--inherit of parent value--> 
                    <navbar filterMenu="inherit" cssClass="navbar-dark bg-dark " />
                    <toc>sidebar</toc>
                </developer-info>
                <overview>
                    <toc>false</toc>
                    <sections>
                        <thumbs>1</thumbs>
                        <body />
                        <columns>1</columns>
                    </sections>
                </overview>
                <modules>
                    <toc>sidebar</toc>
                </modules>
                <reports>
                    <toc>sidebar</toc>
                </reports>
            </pages>
        </reflowSkin>
