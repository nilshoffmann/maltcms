<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>maltcms-modules</artifactId>
        <groupId>net.sf.maltcms</groupId>
        <version>1.3.1</version>
    </parent>
    <groupId>net.sf.maltcms.org.apache.poi</groupId>
    <artifactId>poi-osgi</artifactId>
    <version>3.9</version>
    <name>POI OSGI</name>
    <url>http://poi.apache.org</url>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <packaging>bundle</packaging>
    <dependencies>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <!-- set this to project.version to stay in sync -->
            <version>3.9</version>
            <!--<scope>provided</scope>-->
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml</artifactId>
            <!-- set this to project.version to stay in sync -->
            <version>3.9</version>
            <!--<scope>provided</scope>-->
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi-ooxml-schemas</artifactId>
            <!-- set this to project.version to stay in sync -->
            <version>3.9</version>
            <!--<scope>provided</scope>-->
        </dependency>
<!--        <dependency>
            <artifactId>xml-apis</artifactId>
            <groupId>xml-apis</groupId>
            <type>jar</type>
            <version>1.0.b2</version>
            <scope>provided</scope>
        </dependency>-->
        <dependency>
            <artifactId>xmlbeans</artifactId>
            <groupId>org.apache.xmlbeans</groupId>
            <type>jar</type>
            <version>2.3.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <artifactId>stax-api</artifactId>
            <groupId>stax</groupId>
            <type>jar</type>
            <version>1.0.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <artifactId>dom4j</artifactId>
            <groupId>dom4j</groupId>
            <type>jar</type>
            <version>1.6.1</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
	
    <build>
        <plugins>
            <plugin> 
                <groupId>org.apache.felix</groupId> 
                <artifactId>maven-bundle-plugin</artifactId> 
                <extensions>true</extensions> 
                <configuration> 
                    <instructions> 
                        <!-- 
                                state the packages to export, separated by ';' 
                                if these are not given, dependencies are NOT included 
                                by bnd
                        -->
                        <Export-Package>org.apache.poi.*;org.openxmlformats;schema*;org.apache.poi.openxml4j.exceptions.*</Export-Package>
                        <!--
                                state the url of the license
                        -->
                        <Bundle-License>http://www.apache.org/licenses/LICENSE-2.0</Bundle-License>
                        <!--
                                short description of the bundle 
                        -->
                        <Bundle-Description>Apache POI - the Java API for Microsoft Documents</Bundle-Description>
                    </instructions> 
                </configuration> 
                <executions>
                    <execution>
                        <id>bundle-manifest</id>
                        <phase>package</phase>
                        <goals>
                            <goal>bundle</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin> 
        </plugins>
    </build>
</project>

